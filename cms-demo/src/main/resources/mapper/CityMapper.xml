<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.springcms.demo.mapper.CityMapper">

    <resultMap id="BaseResultMap" type="org.springcms.demo.entity.City">
            <id property="id" column="id" jdbcType="BIGINT"/>
            <result property="pid" column="pid" jdbcType="INTEGER"/>
            <result property="name" column="name" jdbcType="VARCHAR"/>
            <result property="shortname" column="shortname" jdbcType="VARCHAR"/>
            <result property="code" column="code" jdbcType="CHAR"/>
            <result property="level" column="level" jdbcType="TINYINT"/>
            <result property="longitude" column="longitude" jdbcType="VARCHAR"/>
            <result property="latitude" column="latitude" jdbcType="VARCHAR"/>
            <result property="status" column="status" jdbcType="TINYINT"/>
    </resultMap>

    <select id="queryChilds" resultType="org.springcms.demo.vo.TreeCityVO">
        select a.*,(select count(b.id) from cms_city b where b.pid=a.id) as childrens from cms_city a where pid=#{pid}
    </select>
</mapper>
